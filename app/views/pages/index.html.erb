<div class="page-header">
  <h3>
    Pages
    <a href="/pages/new" class="btn btn-lg btn-success">New Page</a>
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Actions</th>
      </tr>

      <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td>
          <a href="/pages/<%= page.id %>" class="btn btn-primary">Show</a>
          <a href="/pages/<%= page.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_page/<%= page.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
