<div class="page-header">
  <h1>
    Pages
    <a href="/pages/new" class="btn btn-lg btn-success">New Page</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>For</th>
        <th>Comment</th>
        <th>Blog</th>
        <th>Calendar</th>
        <th>Description</th>
        <th>Photo</th>
        <th>Title</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @pages.each do |page| %>
      <tr>
        <td><%= page.for %></td>
        <td><%= page.comment_id %></td>
        <td><%= page.blog_id %></td>
        <td><%= page.calendar_id %></td>
        <td><%= page.description %></td>
        <td><%= page.photo %></td>
        <td><%= page.title %></td>
        <td><%= page.user_id %></td>
        <td>
          <a href="/pages/<%= page.id %>" class="btn btn-primary">Show</a>
          <a href="/pages/<%= page.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_page/<%= page.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
