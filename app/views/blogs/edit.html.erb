<!-- Validation failure messages -->
<% if @blog.errors.any? %>
  <% @blog.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Blog #<%= @blog.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_blog/<%= @blog.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @blog.title %>">
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="control-label">
          Photo
        </label>

        <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @blog.photo %>">
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @blog.body %></textarea>
      </div>

      <!-- Label and input for page_id -->
      <div class="form-group">
        <label for="page_id" class="control-label">
          Page
        </label>

        <input type="text" id="page_id" name="page_id" placeholder="Page" class="form-control" value="<%= @blog.page_id %>">
      </div>

      <button class="btn btn-warning">
        Update Blog
      </button>
      or
      <a href="/blogs/<%= @blog.id %>">Cancel</a>
    </form>
  </div>
</div>
